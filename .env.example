# ============================================================================
# Student Council PGTK - Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual credentials

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Postgres connection string (Project Settings -> Database -> Connection string)
# Нужно за автоматично създаване/ъпдейт на таблиците чрез `npm run db:setup`.
SUPABASE_DB_URL=postgresql://USER:PASSWORD@HOST:6543/postgres?sslmode=require

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Set to your application's base URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# OPENAI API (For AI Content Generation)
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here

# ============================================================================
# DISCORD INTEGRATION (Optional - Can be set via Admin Panel)
# ============================================================================
NEXT_PUBLIC_DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/your-webhook-id
DISCORD_BOT_TOKEN=your-bot-token-here

# ============================================================================
# EMAIL SERVICE (Optional - For notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
# Supabase Storage buckets (already configured in Supabase)
NEXT_PUBLIC_STORAGE_BUCKET_NEWS=news-images
NEXT_PUBLIC_STORAGE_BUCKET_EVENTS=event-images

# ============================================================================
# FEATURE FLAGS
# ============================================================================
NEXT_PUBLIC_ENABLE_AI_GENERATOR=true
NEXT_PUBLIC_ENABLE_DISCORD=true
NEXT_PUBLIC_ENABLE_RSS_FEED=true

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# ============================================================================
# GOOGLE DRIVE GALLERY (Optional)
# ============================================================================
# Service account за достъп до Google Drive (само за четене).
# 1) Създай service account в Google Cloud Console
# 2) Дай му роля "Viewer" на конкретната папка в Google Drive
# 3) Копирай email и private key тук:
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
# Ключът трябва да е в един ред, със \n вместо реални нови редове:
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ID на папката в Google Drive, която съдържа снимките за галерията
GOOGLE_DRIVE_FOLDER_ID=your-drive-folder-id
